---
interface Props {
	nametag: string;
	idioma : string;
	userDc : string;
	skin : string;
}

const { nametag,idioma,userDc, skin } = Astro.props;
---

<article class="bg-slate-800 w-[300px] h-[400px] rounded-xl border border-slate-700 overflow-hidden relative max-lg:w-[200px] max-lg:h-[300px]">
	<div class="flex m-3 gap-4  flex-col px-3 ">
		<svg class="absolute right-2 w-1/3 "  viewBox="0 0 81 78" fill="none" xmlns="http://www.w3.org/2000/svg">
			<path d="M0.457031 0.818359H26.1254V26.4867H0.457031V0.818359Z" fill="#253145"/>
			<path d="M51.7938 0.818359H77.4622V26.4867H51.7938V0.818359Z" fill="#253145"/>
			<path d="M54.6013 52.1551H80.2696V77.8235H54.6013V52.1551Z" fill="#253145"/>
			<path d="M26.1254 26.4867H51.7938V52.1551H26.1254V26.4867Z" fill="#253145"/>
		</svg>
		<p class="block z-10 text-xl font-medium capitalize text-gray-200 text-left max-lg:text-lg"><strong class="border-b-2 border-gray-600">NAMETAG:</strong> {nametag}</p>
		<p class="text-xl font-medium capitalize text-gray-200 text-left max-lg:text-lg"><strong class="border-b-2 border-gray-600">IDIOMA:</strong> {idioma}</p>
		<p class="text-xl font-medium capitalize text-gray-200 text-left max-lg:text-lg"><strong class="border-b-2 border-gray-600">USER DC:</strong> {userDc}</p>
		<img class="w-4/5 right-0 top-40 absolute hover:scale-105 transition-transform" src={skin} alt={nametag}>
	</div>
</article>


